{
  // TypeScript 应用程序配置文件
  // 继承 Vue 官方推荐的 TypeScript 配置
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  
  // 包含的文件和目录
  "include": [
    "env.d.ts",      // 环境类型声明文件
    "src/**/*",      // src 目录下的所有文件
    "src/**/*.vue"   // src 目录下的所有 Vue 单文件组件
  ],
  
  // 排除的文件和目录
  "exclude": [
    "src/**/__tests__/*"  // 排除测试文件
  ],
  
  // 编译选项
  "compilerOptions": {
    // TypeScript 构建信息文件位置
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    // 路径映射配置
    "paths": {
      // @/* 映射到 ./src/* 目录
      // 与 vite.config.ts 中的 alias 配置保持一致
      "@/*": ["./src/*"]
    }
  }
}
